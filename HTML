    // Simulasi Discord form
    function joinDiscord() {
      const name = document.getElementById("discordName").value;
      const msg = document.getElementById("discordMessage");
      if (name.trim() === "") {
        msg.textContent = "Masukkan nama Discord dengan benar.";
        msg.style.color = "red";
      } else {
        msg.textContent = `Terima kasih, ${name}! Link undangan akan dikirim.`;
        msg.style.color = "green";
      }
    }
